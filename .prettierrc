{
  "plugins": ["prettier-plugin-go-template"],

  "overrides": [
    {
      "files": ["*.html", "*.css"],
      "options": {
        "parser": "go-template",
        "singleQuote": false
      }
    },
    { "files": "*.md", "options": { "proseWrap": "never" } }
  ],
  "goTemplateBracketSpacing": true,
  "bracketSameLine": true,
  "singleQuote": true,
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 140
}
